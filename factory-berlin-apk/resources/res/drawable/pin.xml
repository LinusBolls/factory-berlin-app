<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/error"/>
            <size android:height="@dimen/pin_diameter" android:width="@dimen/pin_diameter"/>
        </shape>
    </item>
    <item android:state_active="true">
        <shape android:shape="oval">
            <solid android:color="@color/interaction"/>
            <size android:height="@dimen/pin_diameter" android:width="@dimen/pin_diameter"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#0000"/>
                    <size android:height="@dimen/pin_diameter" android:width="@dimen/pin_diameter"/>
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/primary"/>
                    <size android:height="@dimen/pin_radius" android:width="@dimen/pin_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
